#compdef enlighten
_enlighten_commands(){
   local -a _firstopts _secondopts
   _firstopts=(
      'increase:increase brightness'
      'decrease:decrease brightness'
      )
   _secondopts=(
      'keyboard:use keyboard as device'
      'display:use display as device'
      )
   if (( CURRENT == 1 )); then
      _describe 'direction' _firstopts
   elif ((CURRENT == 2 )); then
      _describe 'device' _secondopts
   else
      _message "no more options"
   fi
}
            
_arguments \
   {-h,--help}'[show help]' \
   '*::commands:_enlighten_commands'

